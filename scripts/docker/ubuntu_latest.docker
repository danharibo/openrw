FROM ubuntu:rolling

RUN apt-get update \
    && apt-get install --no-install-recommends --no-upgrade -y \
        build-essential \
        cmake \
        gcc-7 \
        g++-7 \
        clang-6.0 \
        libavcodec-dev \
        libavformat-dev \
        libboost-filesystem-dev \
        libboost-program-options-dev \
        libbullet-dev \
        libglm-dev \
        libopenal-dev \
        libsdl2-dev \
        libboost-test-dev \
        libqt5opengl5-dev \
        libfreetype6-dev \
        iwyu \
        ninja-build \
        qt5-default

CMD ["/bin/bash"]
